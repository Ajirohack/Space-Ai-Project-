{
  "manifest_version": 3,
  "name": "GPT Sidebar Extension",
  "version": "1.0.0",
  "description": "A browser extension with a customizable sidebar.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "sidebar.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://localhost:8080/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "sidebar.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "sidebar.js",
        "sidebar.css"
      ],
      "matches": [
        "*://localhost:8080/*"
      ]
    }
  ]
}